@using System.Security.Claims
@model MagikarpMayhem.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>

<div class="profile-container">
    <div class="profile-header">
        <img src="~/static/trainer-image.png" alt="Trainer avatar" style="width: 100px; height: 100px;"/>
        <h3>@Model.Username</h3>
        <p>@Enum.GetName(typeof(UserRole), Model.Role)</p>
    </div>

    @if (User.Identity.IsAuthenticated && User.FindFirst(ClaimTypes.NameIdentifier).Value == Model.Id.ToString())
    {
        <a href="/Pokemon">View My Pokemons</a>
    }
    else
    {
        <a href="/Pokemon/UserPokemons/@Model.Id">View User's Pokemons</a>
    }
</div>

<style>
    .profile-container {
        padding: 1rem;
        border-radius: 8px;
        max-width: 600px;
        margin: 0 auto;
    }
    .profile-header {
        text-align: center;
        margin-bottom: 1rem;
    }
</style>