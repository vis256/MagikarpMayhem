@model MagikarpMayhem.Models.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post" class="pb-4">
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>

<div class="button-list">
    <partial name="Partials/_NavButton" model='new NavButtonModel { ButtonText = "Forgot your password?", Controller = "User", Action = "ForgotPassword", Method = "get"}'/>
    <partial name="Partials/_NavButton" model='new NavButtonModel { ButtonText = "Register as a new user", Controller = "User", Action = "Register", Method = "get"}'/>
</div>