@model Pokemon

@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm("Create", "Pokemon", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PokedexNumber)
        @Html.DropDownListFor(model => model.PokedexNumber, new SelectList(ViewBag.PokedexEntries, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PokedexNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Level)
        @Html.TextBoxFor(model => model.Level, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Level)
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}